{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "{{component.name}}",
    "labels": {
      "name": "{{component.name}}",
      "app_id": "{{app.id}}"
    }
  },
  "spec": {
    "ports": [
      {
        "port": {{component.service-port}},
        "targetPort": {{component.port}}
      }
    ],
    "selector": {
      "name": "{{component.name}}"
    }
  }
}
