{
  "name": "spark-master",
  "image": "{{component.image_name}}:latest",
  "env": [
    {
      "name": "SPARK_MASTER_PORT",
      "value": "{{service.master-port}}"
    },
    {
      "name": "SPARK_MASTER_WEBUI_PORT",
      "value": "{{service.web-ui-port}}"
    }
  ],
  "ports": [
    {
      "name": "master-port",
      "containerPort": {{service.master-port}}
    },
    {
      "name": "web-ui-port",
      "containerPort": {{service.web-ui-port}}
    }
  ],
  "resources": {
    "limits": {
      "cpu": "100m"
    }
  },
  "command": ["./start.sh"]
}
