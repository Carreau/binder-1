{
  "components": [
    { "name": "worker",
      "deployments": [
        {
          "type": "controller",
          "parameters": {
            "num_replicas": "1"
          }
        }
      ]
    },
    {
     "name": "master",
     "deployments": [
       {
         "type": "pod"
       },
       {
         "type": "service",
         "parameters": {
           "service-port": {{service.master-port}},
           "port": {{service.master-port}}
         }
       }
     ]
    }
  ]
}
